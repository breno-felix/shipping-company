<h3>
  <%= link_to @carrier.brand_name, carrier_path(@carrier) %>
</h3>

<h3> Cadastrar Preços: para intervalo de Km </h3> 

<% if(@price.errors.any?) %>
  <p>Verifique os erros abaixo:</p>
  <ul>
    <% @price.errors.full_messages.each do |msg| %>
      <li> <%=msg%> </li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: [:carrier, @price]) do |f|%>
  Km Inicial <%=@initial_kilometer%>
  <div>
    <%= f.label :final_kilometer %>
    <%= f.text_field :final_kilometer%>
  </div>
  <div>
    <%= f.label :price_km %>
    <%= f.text_field :price_km%>
  </div>
  <div>
    <%= f.submit 'Cadastrar'%>
  </div>
<% end %>

<h3>Tabela de preços por intervalos de Km</h3>

<% if @price_kilometers.any? %>
  <table>
    <thead>
      <tr>
        <th>Km Inicial</th>
        <th>Km Final</th>
        <th>Valor Mínimo</th>
      </tr>
    </thead>
    <tbody>
      <% @price_kilometers.each do |p| %>
      <tr>
        <td> <%= p.initial_kilometer %> </td>
        <td> <%= p.final_kilometer %> </td>
        <td> <%= p.price_km %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p> Não existem preços por intervalo de Km cadastrados. </p>
<% end %>


